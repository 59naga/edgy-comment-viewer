artworks()
  .logo
    fixed 0
    margin auto
    
    opacity .75
    
    font-size 2em
    width 80vw
    height 1em
    z-index 100
    
    input
      box-sizing-reset()
      size 100%
      // padding .25em 0
      text-align center
    footer
      position absolute
      font-size 80%
      top 1.25em
      right 0
      padding 0 1em
      theme_sepia()
  
  footer
    text-align center
  
  nav
    [ng-repeat].ng-enter
      animation fadeIn .5s
    
    tile(15)
  
artwork_add()
  form
    form()
    
    textarea
      min-height 36vh
    
    select
      selectbox()
      background-image url("data:image/svg+xml;base64,")
      // background-image url("data:image/svg+xml;base64,")
      // background-image url("data:image/svg+xml;base64,")
      
artwork_edit()
  artwork_add()

artwork_view()
  showcase()
      
  >figcaption
    theme_light()
  
    >section
      padding 1em
      h2+*
        padding .5em 0
      
      >footer
        text-align right
        font-size .8em
      
      time
        margin-right .5em
        
  .shares
    nav
      text-align right
      a
        font_share()
        font-size 150%
  
  .comments
    theme_sepia()

    form
      letter()
    
      input
        padding .25em .5em
      button
        theme_dark()
      
    ul
      margin .5em 0
      margin-bottom 0
      li
        section
          comment()
          figcaption
            theme_light()
        .to
          a
            theme_dark()
      
      li+li
        margin-top .5em

  .notify
    a
      notify()
      theme_dark()

artwork_view_remove()
  prompt()
  
  section
    comment()
    
    figcaption
      theme_sepia()
  
  footer
    margin-top 1em

artwork_remove()
  artwork_view()
  
  figcaption
    
    form
      header
      footer
        padding 1em
      
      section
        theme_dark()
        margin .25em
        padding 1em
        footer
          padding 0
          text-align right
          font-size .8em
      
      footer
        button
          margin-right .5em

timeline()
  margin 1em

  header
    margin-bottom 1em
    
    .notify
      a
        notify()
    
    form
      letter()
      input
      button
        padding .5em
        
  ul
    li
      section
        comment()
        
        .to
          a
            theme_light()
        
        figcaption
          theme_light()
      
    li+li
      margin-top .5em

timeline_remove()
  artwork_view_remove()

front_mypage()
  >*
    fig()
  figure
    >a
      margin-top 0
  figcaption
    header
      padding 1em
  
  section
    padding 0 1em
  a
    display block
    font-size 75%
    margin 0.5em 0
    
  .stats
    theme_light()
    
    dd
    a
      font_text()
    
    a
      margin 0
      text-decoration underline
  
  .danger
    a
      theme_highlight()
      
  figure
    font-size inherit
    
    nav
      a
        size 100%
        padding .5em
        theme_light()

front_guest()
  logo_size= 6vw
  overlay()
  > *
    central()
    font-size logo_size
    width 12.5em
    height 4em
    padding 0
    
    header
      text-align right
    
    h1
    h2
      font_logo()
      
    h1
      font-size logo_size
    h2
      font-size logo_size * .50
    h3
      font-size logo_size * .50
    
    nav
      a
        font-size logo_size * .50
        
        display block
        margin .25em auto
        padding .25em
        width 10em
        // &:focus
        theme_sepia()

front_mypage_artworks()
  nav
    a
      theme_light()
      &:nth-of-type(even)
        theme_sepia()
      
      h2
        font-size 120%
      pre
        font-size 80%
      
      fig()
      figure
        img
        svg
          theme_dark()
      figure
        vsize(30)
      figcaption
        padding .5em
        padding-bottom 0
        
      padding-bottom .5em
  
  footer
    text-align right
    
  .notify
    padding 1em
    a
      notify()
      theme_sepia()
  
  .show
    theme_dark()
    text-align center
    width 10em
    display inline-block
    
  .stats
    list-no-fontsize()
    
    li
      display inline-block
      img
      svg
        size 1.5em
    li+li
      margin-left .5em
 
front_mypage_stats()
  prompt()
  >*
    svg
      size 2em
  
  h3
    margin-bottom .5em
  
  ol
    li
      display inline-block
      width calc(100% \/ 4)
      height calc(100% \/ 2 \- 3em)
      
      h4
        span
          display block
          white-space nowrap
          overflow hidden
      
      box-sizing-reset()
      p
        font_text()
        text-align right
        font-size 150%
      
      &:nth-of-type(2)
      &:nth-of-type(4)
      &:nth-of-type(5)
      &:nth-of-type(7)
      &:nth-of-type(10)
      &:nth-of-type(12)
      &:nth-of-type(13)
      &:nth-of-type(15)
        theme_sepia()

front_mypage_edit()
  overlay()
  
  form
    form()

    .mypage_id
      input
        max-width 8em
    textarea
      margin-bottom 1em
      
front_mypage_quit()
  mypage_edit()
  
  form
    figure
      theme_highlight()
    figcaption
      theme_dark()
    h2
      padding .5em
    p
    label
      text-align left
      padding-left 1em
    
    footer
      p
        text-align center