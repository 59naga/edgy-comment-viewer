@import 'kouto-swiss'
@import '../lib/styl/*'

meyer-reset()
edgy()

viewer()
  theme_dark()
  ::selection
    theme_highlight()
  
  *
    font_head()
  pre
    font_text()
  
  h2
    font_head()
    font-size 150%
    white-space nowrap
    overflow ellipsis
  
  .entrance
    entrance()
    
  .command
    padding 0 .5em
  .owner
    margin 0 1em
    theme_sepia()
    figcaption
      >pre
        font-size 150%
  
  >header
  >footer
    z-index 10

  >header
    fixed 0 0 false 0
    
    box-shadow .2em .2em .2em .2em rgba(0,0,0,0.4)
  >footer
    fixed false 0 0 0
    
    background-color rgba(#333,.5)
    box-shadow .2em -.2em .2em .2em rgba(0,0,0,0.4)
  
  >header
    display flex
    > *
      flex 1
      height 2rem
      display block
      
    a
    input
    button
      font_logo()
    
    a
      theme_sepia()
      text-align center
      line-height 2

    input
      flex 20
      font-size .75em
      padding .75rem .5rem
      text-align center
      &:focus
        theme_light()
    a
    button
      max-width 2em
  
  >footer
    &.ng-hide-remove
      animation 'fadeIn' .25s
    &.ng-hide-add
      animation 'fadeOut' .25s
      
    form
      display flex
      >*
        display block
      label
      button
        font-size .5em
        
        width 6em
        max-width 6em
        
      input
        padding 0 .25em
      label
        input[type=checkbox]
          display none
        img
        svg
          size 100%
          transition opacity .25s ease-in
        :checked+img
        :checked+svg
          opacity .5
    
  main
    padding 2.5em 0

  div
    &.ng-enter
      animation fadeIn .5s
    margin .5em
    
    section
      min-height 3em
      fig()
      figure
        h2
          text-align right
          font-size 75%
      figcaption
        theme_light()
        padding .25em
        
        position relative
        footer
          h3
            font_text()
            absolute false false 0 .25em
            font-size 200%
            line-height 1.2
            
            opacity 0.2
          pre
            absolute false .25em .25em false
            
            opacity 0.5
          
          margin-top .25em
      
      footer
        text-align right

login()
  overlay()
  > *
    central()
    width 100%
    height 7em
    padding 0
    
    h1
    h2
      font_logo()
      white-space nowrap 
      
    h1
      font-size 10vw
    h2
      font-size 4vw
    
    section
      margin .25em auto
      width 12.5em

    button
      padding .25em

entrance()
  central()
  height 5em
  
  h1
  h2
  .error
    font_logo()
  
  h1
    font-size 6vw
  h2
    font-size 4vw
  form
    font-size 4vw
    margin .5em 2em
    input
      text-align center
  .error
    font-size 3.5vw
    
    theme_sepia()
    padding .5em 0
    margin .5em auto
    width 18em

.login
  login()
.viewer
  viewer()
