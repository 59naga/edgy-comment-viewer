@import 'kouto-swiss'
@import '../lib/styl/*'

meyer-reset()
edgy()


viewer()
  theme_dark()
  ::selection
    theme_highlight()
  
  *
    font_head()
  pre
    font_text()
    
  h2
    font_head()
    font-size 150%
    white-space nowrap
    overflow ellipsis
  
  .command
    margin 1em
    min-height 3em
  .owner
    margin 2em
    min-height 3em
    theme_sepia()
    figcaption
      >pre
        font-size 150%
  
  header
    display flex
    > *
      flex 1
      height 2rem
      display block
      
    input
    button
      font_logo()

    input
      flex 20
      font-size .75em
      padding .75rem .5rem
      text-align center
      &:focus
        theme_light()
    button
      max-width 2em

  section
    &.ng-enter
      animation fadeIn .5s
      
    fig()
    figure
      h2
        text-align right
        font-size 75%
    figcaption
      theme_light()
      padding .25em
      
      position relative
      footer
        h3
          font_text()
          absolute false false 0 .25em
          font-size 250%
          line-height 1.2
          
          opacity 0.2
        pre
          absolute false .25em .25em false
          
          opacity 0.5
        
        margin-top .25em
    
    footer
      text-align right
      
    margin .5em

login()
  overlay()
  > *
    central()
    width 100%
    height 8em
    padding 0
    
    h1
    h2
      font_logo()
      white-space nowrap 
      
    h1
      font-size 10vw
    h2
      font-size 4vw
    
    section
      margin .25em auto
      width 12.5em

    button
      padding .25em

.login
  login()
.viewer
  viewer()
.comment
  form
    padding .5em
    display flex
    >*
      display block
    label
    button
      font-size .5em
      
      width 6em
      max-width 6em
      
    input
      padding 0 .25em
    label
      input[type=checkbox]
        display none
      img
      svg
        size 100%
        transition opacity .25s ease-in
      :checked+img
      :checked+svg
        opacity .5
  
  ng-hide("fade")
